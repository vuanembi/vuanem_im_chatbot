{% import "metric.sql.j2" as Metric %}
SELECT
    *
FROM (
    SELECT
        DATE(date) AS date,
        {% for metric in section.metrics %}
            {{ Metric.metric_row(metric) }}
            {% if not loop.last %}
            ,
            {% endif %}
        {%- endfor %}
    FROM
        Analytics._agg_Slack_Report
)
WHERE DATE(date) = CURRENT_DATE()
